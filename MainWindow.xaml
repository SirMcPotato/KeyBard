<Window x:Class="KeyBard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls1="clr-namespace:KeyBard.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" MinHeight="500" Width="1280" MinWidth="1280"
        AllowDrop="True" Drop="MainWindow_Drop" DragOver="MainWindow_DragOver">

    <Window.Resources>
        <!-- Shared style for playback buttons -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FF333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF4A90E2" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF4A90E2" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />     <!-- Toolbar Row 1: File & Profiles -->
            <RowDefinition Height="Auto" />     <!-- Toolbar Row 2: Playback & Loops -->
            <RowDefinition Height="Auto" />     <!-- Toolbar Row 3: Settings -->
            <RowDefinition Height="Auto" />     <!-- Progress slider -->
            <RowDefinition Height="Auto" />     <!-- Channel filter -->
            <RowDefinition Height="*" />        <!-- Falling notes canvas -->
            <RowDefinition Height="Auto" />     <!-- Piano keyboard -->
        </Grid.RowDefinitions>

        <!-- Toolbar Row 1: File & Profiles -->
        <controls1:FileProfileControl x:Name="FileProfile" Grid.Row="0"
                                     BrowseClicked="BtnBrowse_Click"
                                     ProfileChanged="ProfileComboBox_SelectionChanged"
                                     LoadBindingsClicked="BtnLoadBindings_Click"
                                     SaveBindingsClicked="BtnSaveBindings_Click"
                                     SaveProfileAsClicked="BtnSaveProfileAs_Click"
                                     ClearBindingsClicked="BtnClearBindings_Click"
                                     SaveForSongClicked="BtnSaveForSong_Click" />

        <!-- Toolbar Row 2: Playback & Loops -->
        <controls1:PlaybackControl x:Name="Playback" Grid.Row="1"
                                  PlayClicked="BtnPlay_Click"
                                  PauseClicked="BtnPause_Click"
                                  StopClicked="BtnStop_Click"
                                  RestartClicked="BtnRestart_Click"
                                  SetLoopStartClicked="BtnSetLoopStart_Click"
                                  SetLoopEndClicked="BtnSetLoopEnd_Click"
                                  ClearLoopClicked="BtnClearLoop_Click" />

        <!-- Toolbar Row 3: Settings -->
        <controls1:SettingsControl x:Name="Settings" Grid.Row="2"
                                  SpeedChanged="SpeedSlider_ValueChanged"
                                  VolumeChanged="VolumeSlider_ValueChanged"
                                  MuteChanged="BtnMute_Click" />

        <!-- Progress Slider -->
        <controls1:ProgressControl x:Name="Progress" Grid.Row="3"
                                  DragStarted="ProgressSlider_DragStarted"
                                  DragCompleted="ProgressSlider_DragCompleted"
                                  ValueChanged="ProgressSlider_ValueChanged" />

        <!-- Channel Filter -->
        <controls1:ChannelFilterControl x:Name="ChannelFilter" Grid.Row="4" />

        <!-- Falling notes -->
        <Border Grid.Row="5" BorderBrush="Gray" BorderThickness="2">
            <Canvas x:Name="PianoRollCanvas" Background="Black"
                    ClipToBounds="True"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Border>

        <!-- Piano keyboard -->
        <controls1:PianoControlWpf x:Name="PianoKeyboard" Grid.Row="6" Height="100" HorizontalAlignment="Stretch" />
    </Grid>
</Window>