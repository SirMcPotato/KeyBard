<UserControl x:Class="KeyBard.Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="1200">
    <UserControl.Resources>
        <Style x:Key="PlaybackButton" TargetType="Button">
            <Setter Property="MinWidth" Value="90" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="6,0" />
            <Setter Property="Padding" Value="14,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.65" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.35" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#FF1E1E1E" Padding="12,8" BorderBrush="#FF333333" BorderThickness="0,0,0,1">
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Speed controls -->
            <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                <TextBlock Text="Playback Speed:" Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="0,0,12,0"
                           FontSize="12" />
                <Slider x:Name="SpeedSlider" Width="140" Minimum="0.25" Maximum="2.0" Value="1.0"
                        TickFrequency="0.25" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center" Margin="0,0,8,0" ValueChanged="SpeedSlider_ValueChanged"
                        Cursor="Hand" />
                <TextBlock x:Name="TxtSpeed" Text="1.00x" Foreground="#FFCCCCCC" VerticalAlignment="Center"
                           FontSize="11" MinWidth="45" />
            </StackPanel>

            <Border Width="1" Background="#FF444444" Margin="0,4,30,4" />

            <!-- Volume controls -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Volume:" Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="0,0,12,0"
                           FontSize="12" />
                <Button x:Name="BtnMute" Content="🔊"
                        Background="#FF505050"
                        Style="{StaticResource PlaybackButton}"
                        MinWidth="40" Padding="6,4"
                        Click="BtnMute_Click" Margin="0,0,8,0" />
                <Slider x:Name="VolumeSlider" IsEnabled="True"
                        Width="140" Minimum="0" Maximum="100" Value="100"
                        VerticalAlignment="Center" Margin="0,0,8,0"
                        ValueChanged="VolumeSlider_ValueChanged"
                        ToolTip="Volume"
                        Cursor="Hand" />
                <TextBlock x:Name="TxtVolume" Text="100%"
                           Foreground="#FFCCCCCC" FontSize="11"
                           VerticalAlignment="Center"
                           MinWidth="35" />
            </StackPanel>
        </WrapPanel>
    </Border>
</UserControl>