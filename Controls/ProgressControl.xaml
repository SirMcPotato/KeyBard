<UserControl x:Class="KeyBard.Controls.ProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="1200">
    <UserControl.Resources>
    </UserControl.Resources>

    <Border Background="#FF1E1E1E" Padding="20,10,20,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TxtCurrentTime" Text="00:00" Foreground="#FFCCCCCC"
                       VerticalAlignment="Center" Margin="0,0,10,0" FontSize="11" FontFamily="Consolas" />

            <Grid Grid.Column="1" VerticalAlignment="Center">
                <!-- Loop Markers Layer -->
                <Canvas x:Name="LoopMarkersCanvas" Height="14" IsHitTestVisible="False">
                    <Polygon x:Name="MarkerA" Points="0,0 10,0 5,8" Fill="#FF4A90E2" Visibility="Collapsed"
                             Canvas.Top="-6" />
                    <Polygon x:Name="MarkerB" Points="0,0 10,0 5,8" Fill="#FF4A90E2" Visibility="Collapsed"
                             Canvas.Top="-6" />
                </Canvas>

                <Slider x:Name="ProgressSlider"
                        Minimum="0" Maximum="100" Value="0"
                        VerticalAlignment="Center" Cursor="Hand"
                        Thumb.DragStarted="ProgressSlider_DragStarted"
                        Thumb.DragCompleted="ProgressSlider_DragCompleted"
                        ValueChanged="ProgressSlider_ValueChanged" />
            </Grid>

            <TextBlock x:Name="TxtTotalTime" Grid.Column="2" Text="00:00" Foreground="#FFCCCCCC"
                       VerticalAlignment="Center" Margin="10,0,0,0" FontSize="11" FontFamily="Consolas" />
        </Grid>
    </Border>
</UserControl>