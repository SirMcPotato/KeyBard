<UserControl x:Class="KeyBard.Controls.FileProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="1200">
    <UserControl.Resources>
        <!-- Style inherited from MainWindow or defined here -->
        <Style x:Key="PlaybackButton" TargetType="Button">
            <Setter Property="MinWidth" Value="90" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="6,0" />
            <Setter Property="Padding" Value="14,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.65" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.35" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ProfileComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="0,0,12,0" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#FF333333" />
            <Setter Property="BorderBrush" Value="#FF555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch"
                                          ClickMode="Press"
                                          Focusable="false"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Name="Border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <Path Name="Arrow"
                                                      Grid.Column="1"
                                                      Fill="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z" />
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter TargetName="Border" Property="Background" Value="#FF444444" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              HorizontalAlignment="Left" />
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Name="DropDownBorder"
                                            Background="#FF333333"
                                            BorderThickness="1"
                                            BorderBrush="#FF555555"
                                            CornerRadius="0,0,4,4" />
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FF333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF4A90E2" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF4A90E2" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#FF1E1E1E" Padding="12,12" BorderBrush="#FF333333" BorderThickness="0,0,0,1" MinHeight="50">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <!-- File Group -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button x:Name="BtnBrowse" Content="📂  Browse MIDI"
                        Background="#FF6A5ACD"
                        Style="{StaticResource PlaybackButton}"
                        Click="BtnBrowse_Click" />

                <TextBlock x:Name="TxtFileName" Text="No file loaded"
                           Foreground="#FF999999" FontSize="12"
                           VerticalAlignment="Center" Margin="12,0" />
            </StackPanel>

            <!-- Profile Group -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Text="Profile:" Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="0,0,8,0"
                           FontSize="12" />
                <ComboBox x:Name="ProfileComboBox" Style="{StaticResource ProfileComboBoxStyle}"
                          SelectionChanged="ProfileComboBox_SelectionChanged" />

                <Button x:Name="BtnLoadBindings" Content="📥 Load"
                        Background="#FF708090" Width="80"
                        Style="{StaticResource PlaybackButton}"
                        Click="BtnLoadBindings_Click" Margin="0,0,8,0" />
                <Button x:Name="BtnSaveBindings" Content="💾 Save"
                        Background="#FF708090" Width="80"
                        Style="{StaticResource PlaybackButton}"
                        Click="BtnSaveBindings_Click" Margin="0,0,8,0" />
                <Button x:Name="BtnSaveProfileAs" Content="📁 Save As..."
                        Background="#FF708090" Width="100"
                        Style="{StaticResource PlaybackButton}"
                        Click="BtnSaveProfileAs_Click" Margin="0,0,8,0"
                        ToolTip="Save current bindings as a new profile" />
                <Button x:Name="BtnClearBindings" Content="🗑️ Clear"
                        Background="#FF8B0000" Width="90"
                        Style="{StaticResource PlaybackButton}"
                        Click="BtnClearBindings_Click" Margin="0,0,8,0"
                        ToolTip="Clear all MIDI to key bindings" />
                <Button x:Name="BtnSaveForSong" Content="🎵 Save for this song"
                        Background="#FF4682B4" Width="155"
                        Style="{StaticResource PlaybackButton}"
                        Click="BtnSaveForSong_Click" IsEnabled="False" Margin="0,0,0,0" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>